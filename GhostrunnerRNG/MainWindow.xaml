<Window x:Class="GhostrunnerRNG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GhostrunnerRNG"
        mc:Ignorable="d" 
        Background="#FF292929"
        Title="Ghostrunner RNG Mod" Height="321" Width="482" MinWidth="400" MinHeight="280" MaxHeight="700" MaxWidth="600">
    <Grid Background="#FF292929" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!--Top row-->
        <Label Grid.Row="0" x:Name="label_Title" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Ghostrunner RNG Mod" FontSize="20" Foreground="White" FontWeight="Bold"/>
        <!--<Label Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Closed Alpha"  FontSize="14" Foreground="White" Margin="0,6,10,0" />-->

        <!--2nd row (main)-->
        <StackPanel Grid.Row="1" Margin="10, 0">
            <TextBlock x:Name="label_levelName" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Current Level: " FontSize="15"  Foreground="White"/>
            <TextBlock x:Name="label_RNGStatus" HorizontalAlignment="Left" VerticalAlignment="Top" Text="RNG Status: waiting..." FontSize="15" Foreground="White" />
            <TextBlock x:Name="label_GlobalLog" HorizontalAlignment="Left" Margin="0, 50" Text="" FontSize="15" Foreground="White" />
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0, 30">
            <Button x:Name="ButtonNewRng" Content="[F7] New RNG" HorizontalAlignment="Right" VerticalAlignment="Top" Height="28" Width="170" FontSize="16" Foreground="white" BorderBrush="#FF040404" Background="#FF666666" Click="ButtonNewRng_Click" IsTabStop="False"/>
            <Button x:Name="ButtonSettings" Content="Settings" HorizontalAlignment="Right" VerticalAlignment="Top" Height="28" Width="170" FontSize="16" Margin="0, 5"  Foreground="white" BorderBrush="#FF040404" Background="#FF666666" Click="ButtonSettings_Click" IsTabStop="False"/>
            <Button x:Name="ButtonDev" Content="Dev" HorizontalAlignment="Right" VerticalAlignment="Top" Height="28" Width="170" FontSize="16"  Foreground="white" BorderBrush="#FF040404" Background="#FF666666" Click="ButtonDev_Click" IsTabStop="False"/>
        </StackPanel>

        <!--seed-->
        <Label x:Name="LabelSeed" Content="" FontSize="15"  Foreground="White" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>

        <!--bottom row-->
        <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="by Dmgvol, LongerWarrior" Foreground="White"/>
        <Button Grid.Row="2" x:Name="ButtonAbout" Content="About" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="100" FontSize="16" Foreground="white" BorderBrush="#FF040404" Background="#FF666666" Click="ButtonAbout_Click" IsTabStop="False"/>
        <Grid Background="#FF292929" Visibility="Hidden" x:Name="errorGrid" Grid.RowSpan="2">
            <Label x:Name="errorMsg" Content="" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="auto" FontSize="20" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
